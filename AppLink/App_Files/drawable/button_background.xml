<!-- res/drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Your desired button color -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Transparent color for shine effect -->
        </shape>
    </item>
</layer-list>
